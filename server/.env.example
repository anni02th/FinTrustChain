# MongoDB Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/fintrustchain?retryWrites=true&w=majority
MONGO_PASSWORD=your_mongo_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long
JWT_EXPIRES_IN=90d

# Server Configuration
PORT=3000
NODE_ENV=development

# Email Configuration (Choose one: SendGrid Web API [Recommended], SMTP, or Mailtrap)

# SENDGRID WEB API (Recommended - No SMTP issues)
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=noreply@yourdomain.com

# SENDGRID SMTP (Alternative)
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USERNAME=apikey
# EMAIL_PASSWORD=your_sendgrid_api_key

# GMAIL SMTP
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USERNAME=your-gmail@gmail.com
# EMAIL_PASSWORD=your-16-char-app-password

# MAILTRAP (Development/Testing Only)
# EMAIL_HOST=sandbox.smtp.mailtrap.io
# EMAIL_PORT=2525
# EMAIL_USERNAME=your_mailtrap_username
# EMAIL_PASSWORD=your_mailtrap_password
# EMAIL_FROM=FinTrustChain <noreply@yourdomain.com>

# Frontend Configuration (for CORS)
FRONTEND_URL=http://localhost:5173

# File Upload Configuration
MAX_FILE_SIZE=5242880

# PhonePe Configuration
PHONEPE_CLIENT_ID=your_phonepe_client_id
PHONEPE_CLIENT_SECRET=your_phonepe_client_secret
PHONEPE_CLIENT_VERSION=1
PHONEPE_HOST_URL=https://api-preprod.phonepe.com/apis/pg-sandbox

# PhonePe Webhook Configuration
PHONEPE_WEBHOOK_USERNAME=your_webhook_username
PHONEPE_WEBHOOK_PASSWORD=your_webhook_password
